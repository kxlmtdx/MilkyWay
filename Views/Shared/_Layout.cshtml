<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MilkyWay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MilkyWay.styles.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("https://i.pinimg.com/736x/15/12/0c/15120c676825d2de879c55e16f95c8dd.jpg")" type="image/x-icon" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" style="color: #ffffff" asp-area="" asp-controller="Home" asp-action="Index">
                    MilkyWay
                    <img src="https://i.imgur.com/suwQeW4.png" alt="Tripify Logo" style="height: 20px; margin-left: 5px;">
                    </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <img src="https://i.imgur.com/3e9qnwu.png" alt="Menu" class="custom-toggler-icon">
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav" style="margin-left: auto;">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="LeaderBoard">
                                LeaderBoard
                                <img src="https://i.imgur.com/u4YiyxW.png" alt="LeaderBoard Icon" style="height: 20px; margin-left: 3px;">
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Login">
                                Sign In
                                <img src="https://i.imgur.com/NVnCPHk.png" alt="Profile Icon" style="height: 20px; margin-left: 3px;">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
